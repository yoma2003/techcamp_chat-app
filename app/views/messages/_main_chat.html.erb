<div class="chat_top">
  <div class="room_title">hogefuga</div>
  <div class="room_exit"><a href="">チャットを終了する</a></div>
</div>

<div class="chat_messages">
  <%= render partial: "message", collection: @messages %>
</div>

<div class="chat_forms">
  <%= form_with model:[@room, @message], class:"form", local:true do |form| %>
    <div class="input-form">
      <%= form.text_field :content, class: "message_form", placeholder: "type a message" %>
      <label class="image_form">
        <span class="image-life">画像</span>
        <%= form.file_field :image, class:"hidden" %>
      </label>
    </div>
    <%= form.submit "送信", class:"submit-form"%>
  <% end %>
</div>